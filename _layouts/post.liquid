---
layout: default
---
<article
  class="page-inset-margin h-entry hentry [] max-is-prose xl:mli-auto"
  itemprop="articleBody"
>
  <header class="post-header">
    <h1 class="p-name entry-title" itemprop="headline">
      {{ title }}
      {% if published == false %}
        (draft)
      {% endif %}
    </h1>
    <p class="meta">
      <a class="u-url" href="{{ page.url }}"
        ><time itemprop="datePublished" class="dt-published published" datetime="{{ page.date | toHTMLDatetime }}">
          {{- page.date | date: '%b %-d, %Y' -}}
        </time></a
      >
      {%- if author %}
        • by <span class="p-author author">{{ author }}</span>
      {%- endif -%}
      {% assign visibleTags = tags | exclude: 'post' | sort_natural %}
      {%- if visibleTags %}
        • in categories:
        {% for cat in visibleTags -%}
          <a href="/tags/{{ cat | slugify }}/" class="p-category category">{{ cat }}</a>
          {%- unless forloop.last %}, {% endunless -%}
        {%- endfor -%}
      {%- endif %}
    </p>
  </header>

  <div
    class="
      post-content e-content entry-content
      {% #content styles %}
      text-lg [&>p]:mlb-4 [&>blockquote>p]:mlb-4 [&>blockquote]:font-light [&>blockquote]:italic [&>blockquote]:tracking-tight [&>blockquote]:text-gray-500 [&>blockquote]:pis-5 [&>blockquote]:border-is-4 dark:[&>blockquote]:text-gray-400
    "
    itemprop="articleBody"
  >
    {{ content }}
  </div>
</article>
