<div id="{{ note.fileSlug }}" class="relative is-fit max-is-max mlb-4 pis-20">
  <img
    class="absolute h-14 w-14 block-start-0 inline-start-0"
    src="/assets/images/avatar_320.jpg"
    alt="Quoted note:"
  >
  <blockquote
    class="
      bg-gray-200 dark:bg-gray-700 rounded-lg overflow-visible plb-2 pli-3
      {% #arrow -%}
      relative
      before:absolute before:border-transparent before:mbs-4 before:-inline-start-4 before:border-ie-[1rem] before:border-bs-[0.25rem] before:border-be-[0.5rem] before:border-ie-gray-200 dark:before:border-ie-gray-700
    "
  >
    {{- note.templateContent -}}
  </blockquote>
  <p class="text-xs text-gray-500 mbs-1">
    <a href="{{ note.url }}"
      ><time datetime="{{ note.date }}">{{ note.date | date: '%b %-d, %Y' }}</time></a
    >
    {%- if note.data.categories %}
      â€¢ in categories:
      {% for cat in note.data.categories -%}
        <span class="p-category category">{{ cat }}</span>
        {%- unless forloop.last %}, {% endunless -%}
      {%- endfor -%}
    {%- endif %}
  </p>
</div>
